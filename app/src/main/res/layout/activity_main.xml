<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- ログ設定 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <Switch
            android:id="@+id/logSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ログ記録"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="(ログファイルは端末のDownloadフォルダに保存されます)"
            android:textSize="12sp"
            android:textColor="#666666"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <!-- 操作ボタン群 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/loadFilesButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="ファイル一覧を更新"
            android:backgroundTint="#2196F3"
            android:textColor="#FFF"
            android:textAllCaps="false"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="保存"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFF"
            android:textAllCaps="false"/>
    </LinearLayout>

    <!-- 現在のファイル表示 -->
    <TextView
        android:id="@+id/selectedFileTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="選択中のファイル: なし"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:textColor="#757575"
        android:textSize="14sp"/>

    <!-- 編集エリア -->
    <EditText
        android:id="@+id/adClassesEditText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:hint="設定例: C:Ad M:Exact E:除外"
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:padding="12dp"
        android:background="@drawable/edittext_border"
        android:textSize="14sp"
        android:maxLines="8"/>

    <!-- 簡易ガイド -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="C:含む  M:完全一致  E:除外\n※設定後は対象アプリを再起動"
        android:textColor="#666666"
        android:textSize="12sp"
        android:lineSpacingExtra="4dp"/>

    <!-- ファイル一覧 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="設定ファイル一覧"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:background="#FAFAFA"
        android:padding="4dp"/>

</LinearLayout>